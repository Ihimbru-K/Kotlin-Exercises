private class Student {
    private var name: String = ""
    private var age: Int = 0
    private var grade: Double = 0.0

    fun setName(name: String) {
        this.name = name
    }

    fun setAge(age: Int) {
        this.age = age
    }

    fun setGrade(grade: Double) {
        this.grade = grade
    }

    fun getName(): String {
        return name
    }

    fun getAge(): Int {
        return age
    }

    fun getGrade(): Double {
        return grade
    }
    
    /*
    the class Student has three attributes, name, age, and grade. 
    The methods setName, setAge, and setGrade are used to set the values of these attributes,
    while the methods getName, getAge, and getGrade are used to retrieve them.
    */
